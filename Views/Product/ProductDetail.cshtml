@model Products
@{
    ViewData["Title"] = "PRODUCT DETAIL";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="topcontent">
    <img src="~/image/banner/banner1.png" class="img-fluid" style="margin:11px 0" />
</div>

@using (Html.BeginForm())
{
    <div class="container">
        <div class="row justify-content-center">
            <!--menu trái-->
            <div class="col-md-2 menu_left">
                <h1 class="h1 text-center justify-content-center font-weight-bold"> </h1>
                <ul class="list-group position-fixed" id="list-product">
                    <li class="list-group-item d-block"><a class="link__custom" href="#products">Product</a></li>
                    <li class="list-group-item d-block"><a class="link__custom" href="#description">Description</a></li>
                    <li class="list-group-item d-block"><a class="link__custom" href="#mayalsolike">May also like</a></li>
                </ul>
            </div>
            <!-- /.menu trái-->
            <div class="col-md-10" id="products">
                <!--product-->
                <div class="row justify-content-center">
                    <!--carousel image product-->
                    <div class="col-md-6" style="padding:3em 0;">
                        <div id="carouselProduct" class="carousel slide justify-content-center" data-ride="carousel">
                            <div class="carousel-inner justify-content-center">
                                <div class="carousel-item active">
                                    <img src="~/image/product/table_top-stands/lumen.png" class="img-fluid">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/image/product/table_top-stands/lumen1.png" class="img-fluid">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/image/product/table_top-stands/lumen2.png" class="img-fluid">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/image/product/table_top-stands/lumen3.png" class="img-fluid">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselProduct" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon bg-success" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselProduct" role="button" data-slide="next">
                                <span class="carousel-control-next-icon bg-success" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                    <!--/. carousel image product-->
                    <div class="col-md-6" style="padding:3em;">
                        <h1 class="h1">@Html.DisplayFor(m => m.Name)</h1>
                        <h5 style="padding-top: 1em;"><strong class="salary">@Html.DisplayFor(m => m.Price)</strong></h5>
                        <div class="row" style="padding-top: 1em;">
                            <p class="col-md-4 col-sm-4">Quantity</p>
                            <div class="input-group col-md-8 col-sm-6">
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-outline-dark btn-number" disabled="disabled" data-type="minus" data-field="quant[1]">
                                        <span class="glyphicon glyphicon-minus">-</span>
                                    </button>
                                </span>
                                <input type="text" name="quant[1]" class="form-control input-number" value="1" min="1" max="10">
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-outline-dark btn-number" data-type="plus" data-field="quant[1]">
                                        <span class="glyphicon glyphicon-plus">+</span>
                                    </button>
                                </span>
                            </div>
                        </div>
                        <button class="btn btn-success btn-block" style="margin-top:2em;">Add to cart</button>
                    </div>
                </div>
                <!--/. product-->
                <!--Description-->
                <div class="row justify-content-center" style="padding-top:1em" id="description">
                    <div class="col-12">
                        <div class="text-body">
                            <h2 class="h2 text-left font-weight-bold">Description</h2>
                            <p class="text-left font-weight-bold">
                                Formed from one single piece of glass, ‘Lumen’ is a petite tabletop vessel designed to house small plants, flowers, open-air terrariums and other objects.
                            </p>
                            <p class="text-justify">
                                Designed in Australia and crafted to the most exacting standards in Europe,
                                ‘Lumen’ showcases the natural beauty of plants all the while sharing an insight into their intricate growth.
                            </p>
                            <p class="text-left font-weight-bold">
                                Specifications
                            </p>
                            <p class="text-justify">
                                Height | 174mm <br />
                                Diameter | 158mm
                            </p>
                            <p class="text-left font-weight-bold">
                                Care
                            </p>
                            <p class="text-justify">
                                Do not use abrasive cleansers or steel wool. By characteristics of this glassware, product may contain tiny air bubbles and black dots. Product size and shape varies in each item due to manufacturing process.
                            </p>
                            <img src="~/image/product/table_top-stands/lumen1.png" class="img-fluid mx-auto d-block" />
                        </div>
                    </div>
                </div>
                <!--/.Description-->
                <!--You may also like-->
                <div class="row font-weight-bold" id="mayalsolike">
                    <div class="col-md-12">
                        <h2 class="h2 text-left">You may also like...</h2>
                    </div>
                    <div class="col-md-3 col-sm-4 mb-4">
                        <div class="card h-100">
                            <a>
                                <img class="card-img-top img-fluid" src="~/image/product/table_top-stands/nest.png">
                            </a>
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a class="link__custom3">ZUNO NEST</a>
                                </h5>
                                <strong class="salary">$160.00</strong>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3 col-sm-4 mb-4">
                        <div class="card h-100">
                            <a>
                                <img class="card-img-top img-fluid" src="~/image/product/table_top-stands/limited_nest3.png">
                            </a>
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a class="link__custom3">LIMITED EDITION ZUNO</a>
                                </h5>
                                <strong class="salary">$220.00</strong>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3 col-sm-4 mb-4">
                        <div class="card h-100">
                            <a>
                                <img class="card-img-top img-fluid" src="~/image/product/table_top-stands/halo.png">
                            </a>
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a class="link__custom3">ZUNO HALO</a>
                                </h5>
                                <strong class="salary">$110.00</strong>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3 col-sm-4 mb-4">
                        <div class="card h-100">
                            <a>
                                <img class="card-img-top img-fluid" src="~/image/product/table_top-stands/limited_nest1.png">
                            </a>
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a class="link__custom3">LIMITED EDITION ZUNO</a>
                                </h5>
                                <strong class="salary">$220.00</strong>
                            </div>
                        </div>
                    </div>
                </div>
                <!--/. You may also like-->
            </div>
        </div>
    </div>

} 