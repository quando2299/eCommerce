
@{
    ViewData["Title"] = "Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="topcontent">
    <img src="~/image/banner/banner1.png" class="img-fluid" style="margin:11px 0" />
</div>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-sm-6">
            <div class="text-body1 text-justify">
                <h2 for="basic-url">Contact information</h2>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon3">Email or Phone number</span>
                    </div>
                    <input type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3">
                </div>
            </div>
            <h2 for="basic-url">Shipping address</h2>
            <form>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputEmail4">First name</label>
                        <input type="email" class="form-control" id="inputEmail4" placeholder="First name">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputPassword4">Last name</label>
                        <input type="password" class="form-control" id="inputPassword4" placeholder="Last name">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputAddress">Address</label>
                    <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St">
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputCity">City</label>
                        <input type="text" class="form-control" id="inputCity" placeholder="city    ">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputAddress2">Note</label>
                    <textarea type="text" class="form-control" id="inputAddress2" placeholder="Note"></textarea>
                </div>
                @*<div class="form-group">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="gridCheck">
                        <label class="form-check-label" for="gridCheck">
                            Check me out
                        </label>
                    </div>
                </div>*@
                <button class="btn btn-success">Confirm</button>
            </form> 

        </div>
        <div class="col-md-6 col-sm-6">
            <div class="text-body1 text-justify">
                <table class="table justify-content-center align-content-center align-items-center">
                   
                    <tbody>
                        <tr>
                            <td>
                                <img src="~/image/product/table_top-stands/lumen1.png" height="60" />
                            </td>
                            <td class="text-wrap">LUMEN</td>
                            <td class="salary">$<b>130.00</b></td>
                        </tr>
                        <tr>
                            <td>
                                <img src="~/image/product/table_top-stands/nest1.png" height="60" />
                            </td>
                            <td class="text-wrap">ZUNO NEST</td>
                            <td class="salary">$<b>160.00</b></td>
                        </tr>
                    </tbody>
                </table>
                <p class="text-right">Total: $290.00</p>
            </div>
        </div>
    </div>
</div>
